<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="/stylesheets/flaticon.css" />
    <link rel="stylesheet" href="/stylesheets/themify-icons.css" />
    <link rel="stylesheet" href="/stylesheets/admin/custom.css" />
    <link rel="stylesheet" href="/stylesheets/admin/style.css" />
  </head>

  <body>
    <div class="wrapper">
      <%- include ("./share/sidebar.ejs") %>
      <div class="wrapper__main" id="main">
        <div class="wrapper__main__header">
          <a href="/admin/products" class="wrapper__main__header__title"
            >Product List</a
          >
          <div class="wrapper__main__header__function">
            <form action="/admin/products" method="get">
              <input
                type="text"
                id="search"
                name="search"
                placeholder="Search"
              />
              <button type="submit">
                <i class="ti-search"></i>
              </button>
            </form>
          </div>
          <div class="menu-toggle">
            <button id="menu-toggle" class="btn btn-secondary">
              <i class="fa fa-bars" aria-hidden="true"></i>
            </button>
          </div>
        </div>
        <div class="wrapper__main__content" id="wrapperContent">
          <div class="container-fluid" style="padding: 32px">
            <div class="wrapper__main__content__table">
              <div class="wrapper__main__content__table__header">
                <div class="row">
                  <div class="col-6">
                    <p style="font-size: 24px">Product List</p>
                  </div>
                  <div class="col-6">
                    <button
                      type="button"
                      class="btn btn-orange text-white d-block"
                      style="margin-left: auto"
                      data-bs-toggle="modal"
                      data-bs-target="#addUserModal"
                    >
                      <em class="ti-plus"></em> Add
                    </button>
                  </div>
                </div>
              </div>
              <div class="table-responsive-xxl">
                <table
                  class="table table-striped table-bordered"
                  id="table-product"
                >
                  <thead>
                    <tr>
                      <th style="text-align: center; min-width: 200px">
                        <em class="ti-settings"></em>
                      </th>
                      <th style="min-width: 150px">Primary Image</th>
                      <th style="min-width: 300px">Secondary Image</th>
                      <th style="min-width: 200px">Name</th>
                      <th style="min-width: 200px">Category</th>
                      <th style="min-width: 200px">Brand</th>
                      <th style="min-width: 150px">Price</th>
                      <th style="min-width: 150px">Amount</th>
                      <th style="min-width: 150px">Sold</th>
                      <th style="min-width: 150px">Color</th>
                      <th style="min-width: 150px">Width</th>
                      <th style="min-width: 150px">Height</th>
                      <th style="min-width: 150px">Depth</th>
                      <th style="min-width: 150px">Weight</th>
                      <th style="min-width: 300px">Description</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr class="tr-prod" style="opacity: 0.5">
                      <td align="center">
                        <button value="" class="btn btn-danger btn-delete-prod">
                          <em class="ti-trash"></em>
                        </button>
                        <button
                          value=""
                          class="btn btn-success btn-preview-prod"
                        >
                          <em class="ti-eye"></em>
                        </button>
                      </td>
                      <td>
                        <label for="" class="tb-image primary-image">
                          <img src="" alt="" />
                          <input
                            type="file"
                            name=""
                            id=""
                            class="primary-image-input"
                          />
                        </label>
                      </td>
                      <td>
                        <label class="tb-image secondary-image-1" for="">
                          <img src="" alt="" />
                          <input
                            type="file"
                            class="secondary-image-input-1"
                            name=""
                            id=""
                          />
                        </label>
                        <label class="tb-image secondary-image-2" for="">
                          <img src="" alt="" />
                          <input
                            type="file"
                            class="secondary-image-input-2"
                            name=""
                            id=""
                          />
                        </label>
                        <label class="tb-image secondary-image-3" for="">
                          <img src="" alt="" />
                          <input
                            type="file"
                            class="secondary-image-input-3"
                            name=""
                            id=""
                          />
                        </label>
                      </td>
                      <td>
                        <div class="mb-2 mt-2">
                          <input
                            type="text"
                            class="form-control"
                            id=""
                            value=""
                            placeholder="Enter name"
                            name=""
                            required
                          />
                        </div>
                      </td>
                      <td>
                        <select class="mb-2 mt-2 form-control" name="" id="">
                          <option style="visibility: hidden" value=""></option>
                          <option value=""></option>
                        </select>
                      </td>
                      <td>
                        <select class="mb-2 mt-2 form-control" name="" id="">
                          <option style="visibility: hidden" value=""></option>
                          <option value=""></option>
                        </select>
                      </td>
                      <td>
                        <div class="mb-2 mt-2">
                          <input
                            type="number"
                            value=""
                            class="form-control"
                            id=""
                            placeholder="Enter price"
                            name=""
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2">
                          <input
                            type="number"
                            value=""
                            class="form-control"
                            id=""
                            placeholder="Enter amount"
                            name=""
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2">
                          <input
                            type="number"
                            value=""
                            class="form-control"
                            id=""
                            placeholder="Enter sold quantity"
                            name=""
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2">
                          <input
                            type="text"
                            value=""
                            class="form-control"
                            id=""
                            placeholder="Enter color"
                            name=""
                          />
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>

              <div class="wrapper__main__content__table__footer mt-4">
                <div class="row align-items-center">
                  <div class="col-4">Page <%= %> of <%= %></div>
                  <div class="col-8">
                    <nav aria-label="Page navigation example">
                      <ul class="pagination justify-content-end m-auto">
                        <li class="page-item">
                          <form action="/admin/products" method="post">
                            <button
                              type="submit"
                              class="page-link text-dark btn disabled"
                              aria-label="Previous"
                            >
                              <span aria-hidden="true">&laquo;</span>
                            </button>
                            <input
                              type="text"
                              name="page"
                              id="page"
                              value=""
                              style="display: none"
                            />
                            <button
                              type="submit"
                              class="page-link btn text-dark"
                              aria-label="Previous"
                            >
                              <span aria-hidden="true">&laquo;</span>
                            </button>
                          </form>
                        </li>
                        <li class="page-item">
                          <form action="/admin/products" method="post">
                            <button
                              type="submit"
                              class="page-link text-dark btn disabled"
                              aria-label="Previous"
                            ></button>
                            <input
                              type="text"
                              name="page"
                              id="page"
                              value=""
                              style="display: none"
                            />
                            <button
                              type="submit"
                              class="page-link btn btn-orange text-white"
                              aria-label="Previous"
                            ></button>
                          </form>
                        </li>
                        <li class="page-item">
                          <form action="/admin/products" method="post">
                            <button
                              type="submit"
                              class="page-link btn text-dark disabled"
                              aria-label="Previous"
                            ></button>
                            <input
                              type="text"
                              name="page"
                              id="page"
                              value=""
                              style="display: none"
                            />
                            <button
                              type="submit"
                              class="page-link btn text-dark"
                              aria-label="Previous"
                            ></button>
                          </form>
                        </li>
                        <li class="page-item">
                          <form action="/admin/products" method="post">
                            <button
                              type="submit"
                              class="page-link btn text-dark disabled"
                              aria-label="Previous"
                            ></button>
                            <input
                              type="text"
                              name="page"
                              id="page"
                              value=""
                              style="display: none"
                            />
                            <button
                              type="submit"
                              class="page-link btn text-dark"
                              aria-label="Previous"
                            ></button>
                          </form>
                        </li>
                        <li class="page-item">
                          <form action="/admin/products" method="post">
                            <button
                              type="submit"
                              class="page-link btn text-dark disabled"
                              aria-label="Previous"
                            >
                              <span aria-hidden="true">&raquo;</span>
                            </button>
                            <input
                              type="text"
                              name="page"
                              id="page"
                              value=""
                              style="display: none"
                            />
                            <button
                              type="submit"
                              class="page-link btn text-dark"
                              aria-label="Previous"
                            >
                              <span aria-hidden="true">&raquo;</span>
                            </button>
                          </form>
                        </li>
                      </ul>
                    </nav>
                  </div>
                </div>
              </div>

              <!-- The Modal Insert -->
              <div class="modal" id="addUserModal">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                      <h4 class="modal-title">Add Product</h4>
                      <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                      ></button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                      <form
                        action="/admin/products"
                        method="post"
                        class="was-validated"
                        enctype="multipart/form-data"
                      >
                        <div class="mb-3 mt-3 position-relative">
                          <label for="prodName">Product Name</label>
                          <input
                            type="text"
                            class="form-control"
                            id="prodName"
                            placeholder="Enter name"
                            name="prodName"
                            required
                          />
                          <div class="invalid-tooltip">
                            Please check product name.
                          </div>
                        </div>
                        <div class="mb-3 position-relative">
                          <label for="prodTypeId">Category</label>
                          <select
                            class="form-control"
                            name="prodTypeId"
                            id="prodTypeId"
                            required
                          >
                            <option value=""></option>
                          </select>
                          <div class="invalid-tooltip">
                            Please check category
                          </div>
                        </div>
                        <div class="mb-3 position-relative">
                          <label for="brandId">Brand</label>
                          <select
                            class="form-control"
                            name="brandId"
                            id="brandId"
                            required
                          >
                            <option value=""></option>
                          </select>
                          <div class="invalid-tooltip">Please check brand</div>
                        </div>
                        <div class="mb-3 position-relative">
                          <label for="price">Price</label>
                          <input
                            type="number"
                            class="form-control"
                            id="price"
                            placeholder="Enter price"
                            name="price"
                            required
                          />
                          <div class="invalid-tooltip">Please check price</div>
                        </div>
                        <div class="mb-3 position-relative">
                          <label for="amount">Amount</label>
                          <input
                            type="number"
                            class="form-control"
                            id="amount"
                            placeholder="Enter amount"
                            name="amount"
                          />
                          <div class="invalid-tooltip">Please check amount</div>
                        </div>
                        <div class="mb-3 position-relative">
                          <label for="primaryImage">Primary Image</label>
                          <input
                            type="file"
                            class="form-control"
                            id="primaryImage"
                            placeholder="Choose 1 file"
                            name="primaryImage"
                            required
                          />
                          <div class="invalid-tooltip">
                            Please choose 1 file
                          </div>
                        </div>
                        <div class="position-relative">
                          <label for="">Secondary Image</label>
                          <input
                            style="margin-bottom: 8px"
                            type="file"
                            class="form-control"
                            id="secondaryImage_1"
                            placeholder="Choose 1 file"
                            name="secondaryImage_1"
                            required
                          />
                          <div class="invalid-tooltip">
                            Please choose 1 file
                          </div>
                        </div>
                        <div class="position-relative">
                          <input
                            style="margin-bottom: 8px"
                            type="file"
                            class="form-control"
                            id="secondaryImage_2"
                            placeholder="Choose 1 file"
                            name="secondaryImage_2"
                            required
                          />
                          <div class="invalid-tooltip">
                            Please choose 1 file
                          </div>
                        </div>
                        <div class="position-relative">
                          <input
                            style="margin-bottom: 8px"
                            type="file"
                            class="form-control"
                            id="secondaryImage_3"
                            placeholder="Choose 1 file"
                            name="secondaryImage_3"
                            required
                          />
                          <div class="invalid-tooltip">
                            Please choose 1 file
                          </div>
                        </div>
                        <div class="mb-3 position-relative">
                          <label for="color">Color</label>
                          <input
                            type="text"
                            class="form-control"
                            id="color"
                            placeholder="Enter color"
                            name="color"
                          />
                          <div class="invalid-tooltip">Please check color</div>
                        </div>
                        <div class="mb-3 position-relative">
                          <label for="width">Width (m)</label>
                          <input
                            type="number"
                            class="form-control"
                            id="width"
                            placeholder="Enter width"
                            name="width"
                          />
                          <div class="invalid-tooltip">Please check width</div>
                        </div>
                        <div class="mb-3 position-relative">
                          <label for="height">Height (m)</label>
                          <input
                            type="number"
                            class="form-control"
                            id="height"
                            placeholder="Enter height"
                            name="height"
                          />
                          <div class="invalid-tooltip">Please check height</div>
                        </div>
                        <div class="mb-3 position-relative">
                          <label for="depth">Depth (m)</label>
                          <input
                            type="number"
                            class="form-control"
                            id="depth"
                            placeholder="Enter depth"
                            name="depth"
                          />
                          <div class="invalid-tooltip">Please check depth</div>
                        </div>
                        <div class="mb-3 position-relative">
                          <label for="weight">Weight (kg)</label>
                          <input
                            type="number"
                            class="form-control"
                            id="weight"
                            placeholder="Enter weight"
                            name="weight"
                          />
                          <div class="invalid-tooltip">Please check weight</div>
                        </div>
                        <div class="mb-3 position-relative">
                          <label for="soldQuantity">Sold</label>
                          <input
                            type="number"
                            class="form-control"
                            id="soldQuantity"
                            placeholder="Enter Sold Quantity"
                            name="soldQuantity"
                          />
                          <div class="invalid-tooltip">
                            Please check Sold Quantity
                          </div>
                        </div>
                        <div class="mb-3 position-relative">
                          <label for="description">Description</label>
                          <textarea
                            class="form-control"
                            id="description"
                            placeholder="Enter Description"
                            name="description"
                          ></textarea>
                          <div class="invalid-tooltip">
                            Please check Description
                          </div>
                        </div>
                        <button
                          type="submit"
                          class="btn btn-primary m-auto d-block"
                        >
                          Submit
                        </button>
                      </form>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                      <button
                        type="button"
                        class="btn btn-danger"
                        data-bs-dismiss="modal"
                      >
                        Close
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%- include ("./share/modal.ejs") %>
    </div>
    <%- include ("./share/scripts.ejs") %>
  </body>
</html>
