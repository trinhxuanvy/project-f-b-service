<%- include ("./share/head.ejs") %>
    </head>

    <body>
        <div class="wrapper">
            <%- include ("./share/sidebar.ejs") %>
                <div class="wrapper__main" id="main">
                    <div class="wrapper__main__header">
                        <span class="wrapper__main__header__title">Category List</span>
                        <div class="wrapper__main__header__function">

                        </div>
                        <div class="menu-toggle">
                            <button id="menu-toggle" class="btn btn-secondary"><i class="fa fa-bars" aria-hidden="true"></i></button>
                        </div>
                    </div>
                    <div class="wrapper__main__content">
                        <div class="container-fluid" style="padding: 32px;">
                            <div class="wrapper__main__content__table">
                                <div class="wrapper__main__content__table__header">
                                    <div class="row">
                                        <div class="col-6">
                                            <p style="font-size: 24px;">Category List</p>
                                        </div>
                                        <div class="col-6">
                                            <button type="button" class="btn btn-success d-block" style="margin-left: auto;" data-bs-toggle="modal" data-bs-target="#addUserModal"><em class="ti-plus"></em> Add</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="table-responsive-xxl">
                                    <table class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="text-align: center; min-width: 200px; width: 200px;"><em class="ti-settings"></em></th>
                                                <th style="min-width: 200px;">Category Name</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                                <tr>
                                                    <td align="center">
                                                        <a href="" class="btn btn-light"><em class="ti-pencil"></em></a>
                                                        <a href="" class="btn btn-danger"><em class="ti-trash"></em></a>
                                                    </td>
                                                    <td>
                                                    </td>
                                                </tr>

                                        </tbody>
                                    </table>
                                </div>

                                <div class="wrapper__main__content__table__footer mt-4">
                                    <div class="row align-items-center">
                                        <div class="col-4">
                                            Page 1 of 5
                                        </div>
                                        <div class="col-8">
                                            <nav aria-label="Page navigation example">
                                                <ul class="pagination justify-content-end m-auto">
                                                    <li class="page-item">
                                                        <a class="page-link" href="#" aria-label="Previous">
                                                            <span aria-hidden="true">&laquo;</span>
                                                        </a>
                                                    </li>
                                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                                    <li class="page-item">
                                                        <a class="page-link" href="#" aria-label="Next">
                                                            <span aria-hidden="true">&raquo;</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </nav>
                                        </div>
                                    </div>
                                </div>

                                <!-- The Modal -->
                                <div class="modal" id="addUserModal">
                                    <div class="modal-dialog">
                                        <div class="modal-content">

                                            <!-- Modal Header -->
                                            <div class="modal-header">
                                                <h4 class="modal-title">Add Category</h4>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>

                                            <!-- Modal body -->
                                            <div class="modal-body">
                                                <form action="/admin/category" method="post" class="was-validated">
                                                    <div class="mb-3 mt-3 position-relative">
                                                        <label for="prodTypeName">Category Name</label>
                                                        <input type="text" class="form-control" id="prodTypeName" placeholder="Enter name" name="prodTypeName">
                                                        <div class="invalid-tooltip">Please check category name.</div>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary m-auto d-block">Submit</button>
                                                </form>
                                            </div>

                                            <!-- Modal footer -->
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>

        <%- include ("./share/scripts.ejs") %>
    </body>

    </html>