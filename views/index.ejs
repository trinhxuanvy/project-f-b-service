            <div class="vouchers__menu-list__item__left">
              <p class="vouchers__menu-list__item__left__title"><%= item.name %></p>
              <p class="vouchers__menu-list__item__left__info"></p>
            </div>
            <div class="vouchers__menu-list__item__right">
              <div class="vouchers__menu-list__item__right__price"><%= item.percent %>%</div>
              <div class="vouchers__menu-list__item__right__timeline"><%= (new Date(item.startTime)).toLocaleDateString("en-US") %> - <%= (new Date(item.endTime)).toLocaleDateString("en-US") %></div>
              <% if (item.amount != 0) { %>
                <button value="<%= item._id %>" class="vouchers__menu-list__item__right__button"> Thu thập</button>
              <% } else { %>
